<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordReader.Pages.PasswordListPage"
             Title="KennwÃ¶rter">
    <Grid RowDefinitions="*,Auto,Auto" Margin="20" RowSpacing="10">
        <ListView ItemsSource="{Binding PasswordItems}" ItemSelected="ListView_ItemSelected" SelectedItem="{Binding SelectedPasswordItem, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="50,*" RowSpacing="10">
                            <Image Source="{Binding ImageUrl}" HeightRequest="16" WidthRequest="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="1" Text="Neues Kennwort anlegen" WidthRequest="200" Clicked="NewPassword_Clicked" IsEnabled="{Binding CanCreatePassword}"/>
        <ActivityIndicator Grid.Row="2" IsRunning="{Binding IsRunning}" />
    </Grid>
</ContentPage>