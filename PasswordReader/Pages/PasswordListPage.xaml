<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordReader.Pages.PasswordListPage"
             Title="KennwÃ¶rter">
    <Grid RowDefinitions="50,*" Margin="20" RowSpacing="20">
        <Button Text="Aktualisieren" HorizontalOptions="Center" WidthRequest="200" Clicked="Decode_Clicked"
                IsEnabled="{Binding CanDecodePasswordItems}"/>
        <ListView Grid.Row="1" ItemsSource="{Binding PasswordItems}"
                  ItemSelected="ListView_ItemSelected"
                  SelectedItem="{Binding SelectedPasswordItem, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="50,*" RowSpacing="10">
                            <Image Source="{Binding ImageUrl}" HeightRequest="16" WidthRequest="16" HorizontalOptions="Center" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="Center"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>