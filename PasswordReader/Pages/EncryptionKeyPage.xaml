<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordReader.Pages.EncryptionKeyPage"
             Title="Schlüssel">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="80,*" Margin="20" RowSpacing="20">
            <Label Text="Schlüssel:" VerticalOptions="Center"/>
            <Entry x:Name="entryEncryptionKey" Text="{Binding EncryptionKey}" Grid.Column="1" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" Completed="EncryptionKey_Completed"/>
            <Button Text="Speichern" Clicked="Save_Clicked" Grid.Row="2" Grid.ColumnSpan="2" WidthRequest="100" IsEnabled="{Binding CanChangeEncryptionKey}"/>
        </Grid>
    </ScrollView>
</ContentPage>