<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordReader.Pages.EncryptionKeyPage"
             Title="Schlüssel">
    <ScrollView>
        <VerticalStackLayout Margin="20" Spacing="20">
            <Label Text="Schlüssel:"/>
            <Entry Text="{Binding EncryptionKey}" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" Completed="EncryptionKey_Completed"/>
            <Button Text="Speichern" Clicked="Save_Clicked" WidthRequest="100" IsEnabled="{Binding CanChangeEncryptionKey}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>