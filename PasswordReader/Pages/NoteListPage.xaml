<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordReader.Pages.NoteListPage"
             Title="Notizen">
    <ScrollView>
        <Grid RowDefinitions="*,Auto" Margin="20" RowSpacing="10">
            <FlexLayout BindableLayout.ItemsSource="{Binding NoteItems}" Wrap="Wrap" AlignContent="Start">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Title}" HeightRequest="50" Clicked="NoteItem_Clicked" Margin="2"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
            <HorizontalStackLayout Grid.Row="1" Spacing="10" HorizontalOptions="Center">
                <Button Text="Neue Notiz anlegen" Clicked="NewNoteItem_Clicked" WidthRequest="200" IsEnabled="{Binding CanCreateNote}"/>
                <ActivityIndicator IsRunning="{Binding IsRunning}"/>
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>